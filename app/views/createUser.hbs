<section class="hero is-light is-fullheight splash-page">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4-desktop is-offset-4-desktop">
        <div class='box'>
          <h3 class="title has-text-grey">RunLog</h3>
          <p class="subtitle has-text-grey">Create Account</p>
          <hr />
          
          <form>
            <div class="field">
              <div class="control">
                <label for="name">Name
                  <input type="text" id="registerName" class="input is-large"/>
                </label>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <label for="inputPassword">Username
                  <input type="text" id="registerUserName" class="input is-large" />
                </label>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <label for="inputPassword">Password
                  <input type="password" id="registerPassword" class="input is-large" />
                </label>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <label for="email">Email
                  <input type="password" id="registerEmail" class="input is-large" />
                </label>
              </div>
            </div>


            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link" id="registerButton">Submit</button>
                </div>
                
                <div class="control">
                    <a href="/"><button class="button is-light">Cancel</button></a>
                </div>
            </div>
          </form>

      </div>
    </div>
  </div>
</section>
